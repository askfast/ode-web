extends layout

block watermark
  #watermark
  script.
    $('#watermark').css({
      backgroundImage: 'url(../profiles/' + profile.meta  + '/images/watermark.png)',
      backgroundRepeat: 'no-repeat'
    });
    if ($.browser.mobile) $('#watermark').css({ bottom: '-10px' });

block navbar
  .navbar.navbar-inverse.navbar-fixed-top.ng-cloak(
  ng-hide='(location=="login" || location=="forgotpass" || location=="register")',
  bs-navbar='')
    .navbar-inner
      .container-fluid
        a.btn.btn-navbar(data-toggle='collapse',
        data-target='.nav-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href='#dashboard') StandBy
        #collapsed.nav-collapse.collapse
          ul.nav
            li(data-match-route='/dashboard')
              a(href='#dashboard',
              ng-click='collapseNav()') Dashboard
            li(data-match-route='/planboard')
              a(href='#planboard') Agenda
            li(data-match-route='/messages')
              a(href='#messages')
                | {{ui.message.messages}} &nbsp;
                span.badge.badge-success(ng-show="(app.unreadMessages > 0)")
                  | {{app.unreadMessages}}
            li(data-match-route='/groups',
            ng-hide='StandBy.resources.role > 1')
              a(href='#groups') {{ui.groups.groups}}
          ul.nav.pull-right(ng-hide='browser.mobile')
            li
              a(href='#faq#web')
                i.icon-question-sign.icon-white
                | &nbsp;FAQ
            li
              a(href='#help#{{location}}')
                i.icon-info-sign.icon-white
                | &nbsp;Handleiding
            li.dropdown
              a.dropdown-toggle(href='',
              data-toggle='dropdown')
                i.icon-user.icon-white
                | &nbsp;{{StandBy.resources.name}}&nbsp;
                span(ng-show='StandBy.resources.role == 0')[SU]&nbsp;
                b.caret
              ul.dropdown-menu
                li
                  a(href='#profile')
                    i.icon-user
                    | &nbsp;{{ui.profile.profile}}
                li
                  a(href='#settings')
                    i.icon-wrench
                    | &nbsp;{{ui.settings.settings}}
                li.divider
                li
                  a(href='#logout')
                    i.icon-off
                    | &nbsp;{{ui.login.logout}}
            li#fullscreener(ng-show='StandBy.config.fullscreen && browser.webkit')
              a(ng-click='fullScreen()')
                i.icon-fullscreen.icon-white
          ul.nav.pull-right(ng-show='browser.mobile',
          style='{{(browser.landscape) && "margin-right:-20px"}}; display:none')
            li
              a(href='#profile')
                i.icon-user.icon-white(ng-hide='browser.portrait || browser.screen.width < 768')
                span(ng-show='browser.portrait || browser.screen.width < 768')
            li
              a(href='#settings')
                i.icon-wrench.icon-white(ng-hide='browser.portrait || browser.screen.width < 768')
                span(ng-show='browser.portrait || browser.screen.width < 768')
            li
              a(href='#logout')
                i.icon-off.icon-white(ng-hide='browser.portrait || browser.screen.width < 768')
                span(ng-show='browser.portrait || browser.screen.width < 768')

block loading
  #loading.ng-cloak(ng-show='loadingBig')
    div(ng-show='loaderIcons.general')
      span.entypo &#9203;
      p {{ui.loading.general}}...
    div(ng-show='loaderIcons.dashboard')
      span.entypo &#9716;
      p {{ui.loading.general}} {{ui.loading.dashboard}}
    div(ng-show='loaderIcons.planboard')
      span.entypo &#128340;
      p {{ui.loading.general}} {{ui.loading.planboard}}
    div(ng-show='loaderIcons.messages')
      span.entypo &#59255;
      p {{ui.loading.general}} {{ui.loading.messages}}
    div(ng-show='loaderIcons.groups')
      span.entypo &#128101;
      p {{ui.loading.general}} {{ui.loading.groups}}
    div(ng-show='loaderIcons.profile')
      span.entypo &#128100;
      p {{ui.loading.general}} {{ui.loading.profile}}
    div(ng-show='loaderIcons.settings')
      span.entypo &#9874;
      p {{ui.loading.general}} {{ui.loading.settings}}

block notifications
  #notification.alert.ng-cloak(class='{{notification.type}}', ng-show='notification.status')
    button.close(type='button', ng-click='notification.status = false') Ã—
    span(ng-hide='notification.confirm') {{notification.message}}
    span(ng-show='notification.confirm')
      | {{ui.confirms.remove}}
      button.btn.btn-mini.btn-danger(ng-click='fireDeleteRequest(notification.options)') Delete

block mobile-status-bar
  #mobile-status-bar.ng-cloak(ng-show='loading.status && browser.mobile')
    img(src='images/ajax-loader.gif')
    small {{loading.message}}

block footer
  #footer.ng-cloak(ng-hide='browser.mobile')
    .container-fluid
      #copyrights
        #download-footer
          ul
            li(ng-show='StandBy.config.profile.mobileApp.status')
              .btn-group.dropup
                button.btn.btn-success.dropdown-toggle(data-toggle='dropdown')
                  | Download mobiele app
                ul.dropdown-menu.pull-right
                  li(ng-show='(config.profile.meta == "demo")')
                    a(href='https://play.google.com/store/apps/details?id=com.askcs.standbydemo', target='_blank')
                      | Download Android App
                  li(ng-hide='(config.profile.meta == "demo")')
                    a(href='https://play.google.com/store/apps/details?id=com.askcs.standby', target='_blank')
                      | Download Android App
                  li
                    a(href='https://itunes.apple.com/nl/app/standby/id655588325?mt=8&uo=4', target='itunes_store')
                      | Download iPhone App
            li
              img(src='images/standby_logo_footer.png', alt='StandBy Logo')
            li
              span.muted(style='display: block; margin-top: 4px;')
                small
                  | Ask Community Systems, 2013 &nbsp; | &nbsp;&nbsp;
                  i
                    a(href='versions.html', target='_blank', style='color: #dddddd;') StandBy v{{StandBy.config.version}}
      p.muted(ng-show='loading.status')
        img(src='images/ajax-loader.gif')
        small
          span(ng-show='app.preloader.status') {{app.preloader.count}}%
          | {{loading.message}}

